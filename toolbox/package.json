{
  "name": "storybook-addon-stenciljs",
  "version": "0.1.0",
  "description": "A Storybook wrapper for optimizing Vite config when using Stencil components",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./v9": {
      "types": "./dist/v9/index.d.ts",
      "import": "./dist/v9/index.js",
      "require": "./dist/v9/index.js"
    },
    "./v10": {
      "types": "./dist/v10/index.d.ts",
      "import": "./dist/v10/index.js",
      "require": "./dist/v10/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:types && vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepublishOnly": "npm run build && npm run test",
    "version:alpha": "npm version prerelease --preid=alpha --no-git-tag-version",
    "version:beta": "npm version prerelease --preid=beta --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "publish:alpha": "npm run version:alpha && npm publish --tag alpha",
    "publish:beta": "npm run version:beta && npm publish --tag beta",
    "publish:prod": "npm run version:patch && npm publish",
    "publish:prod:minor": "npm run version:minor && npm publish",
    "publish:prod:major": "npm run version:major && npm publish"
  },
  "keywords": [
    "storybook",
    "stencil",
    "vite",
    "addon",
    "web-components"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@storybook/html-vite": "^9.0.0 || ^10.0.0",
    "vite": "^5.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "@storybook/html-vite": {
      "optional": false
    },
    "vite": {
      "optional": false
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@storybook/html-vite": "^10.1.8",
    "@types/node": "^25.0.0",
    "typescript": "^5.9.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.0"
  }
}
